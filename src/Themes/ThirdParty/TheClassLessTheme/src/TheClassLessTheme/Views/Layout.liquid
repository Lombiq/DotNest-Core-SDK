	    <link rel="stylesheet" href="https://mblode.github.io/marx/stylesheets/all-3e842764.css">"-->
      
        {% if Site.Properties.ThemeSettings.ThemeSettings.UseTinyVersion.Value %}
            {% style name:"classless-tiny", src:"~/TheClassLessTheme/css/classless-tiny.css",
                cdn_src:"https://classless.de/classless-tiny.css" %}
        {% else %}
            {% style name:"classless", src:"~/TheClassLessTheme/css/classless.css",
                cdn_src:"https://classless.de/classless.css" %}
        {% endif %}
            {% style name:"themes", src:"~/TheClassLessTheme/css/themes.css",
                cdn_src:"https://classless.de/addons/themes.css" %}

	  {% resources type: "Meta" %}
	  {% resources type: "HeadLink" %}
	  {% resources type: "Stylesheet" %}
	  {% resources type: "HeadScript" %}
	  {% render_section "HeadMeta", required: false %}
  </head>
    <body>
        {% shape "menu", alias: "alias:main-menu", cache_id: "main-menu", cache_duration: "00:05:00", cache_tag: "alias:main-menu" %}
        <main>
            <div id="top" class="page" role="document">
            {% render_section "Navigation", required: false %}
                    {% render_body %}
                {% render_section "Footer", required: false %}
                {% resources type: "FootScript" %}
            </div>
        </main>
    </body>
</html>

